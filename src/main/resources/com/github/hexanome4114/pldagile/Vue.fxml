<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.hexanome4114.pldagile.controleur.Controleur">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox prefHeight="640.0" prefWidth="1280.0">
        <VBox>
            <Pane fx:id="carte" prefHeight="640.0" prefWidth="640.0" style="-fx-background-color: white;" />
            <CheckBox fx:id="afficherPointsCheckBox" mnemonicParsing="false" onAction="#afficherPointsDeLivraison" text="Afficher les points de livraison">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </CheckBox>
        </VBox>
        <VBox prefHeight="640.0" prefWidth="640.0">
            <HBox prefHeight="19.0" prefWidth="640.0">
                <ComboBox fx:id="comboBoxLivreur" prefWidth="150.0">
                   <HBox.margin>
                      <Insets right="10.0" />
                   </HBox.margin>
                </ComboBox>
                <ComboBox fx:id="comboBoxFenetreDeLivraison" layoutX="160.0" layoutY="10.0" prefWidth="150.0">
                   <HBox.margin>
                      <Insets right="10.0" />
                   </HBox.margin>
                </ComboBox>
                <ComboBox fx:id="comboBoxAdresse" prefHeight="24.0" prefWidth="349.0" />
            </HBox>
            <HBox>
                <Button fx:id="ajouterLivraisonBouton" onAction="#ajouterLivraison" text="Ajouter une livraison">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="supprimerLivraisonBouton" disable="true" mnemonicParsing="false" onAction="#supprimerLivraison" text="Supprimer une livraison" />
                <VBox.margin>
                   <Insets top="10.0" />
                </VBox.margin>
            </HBox>
            <Label fx:id="messageErreur" prefHeight="18.0" prefWidth="640.0" textFill="RED">
                <VBox.margin>
                   <Insets top="10.0" />
                </VBox.margin>
            </Label>
            <TableView fx:id="tableauLivraison" prefHeight="200.0" prefWidth="640.0">
                <columns>
                    <TableColumn fx:id="numeroLivraison" prefWidth="213.3" text="Numéro de livraison" />
                    <TableColumn fx:id="livreur" prefWidth="213.3" text="Livreur" />
                    <TableColumn fx:id="fenetreDeLivraison" prefWidth="213.3" text="Fenêtre" />
                </columns>
                <VBox.margin>
                   <Insets top="10.0" />
                </VBox.margin>
            </TableView>
            <HBox>
                <Button fx:id="sauvegarderLivraisonsBouton" disable="true" onAction="#sauvegarderLivraisons" text="Sauvegarder les livraisons">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="chargerLivraisonBouton" mnemonicParsing="false" onAction="#chargerLivraisons" text="Charger des livraisons" />
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </HBox>
            <Button fx:id="calculerTourneeBouton" onAction="#calculerTournee" text="Calculer la tournee">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Button>
            <HBox.margin>
                <Insets left="20.0" />
            </HBox.margin>
        </VBox>
    </HBox>
    <Button fx:id="chargerPlanBouton" onAction="#chargerPlan" text="Charger le plan" />
</VBox>
